<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LyricsEmbdM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LyricsEmbdM.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Embeder" Icon="embedder.png">
            <ShellContent ContentTemplate="{DataTemplate local:Embedder}"/>
        </Tab>
        <Tab Title="Finder" Icon="finder.png">
            <ShellContent ContentTemplate="{DataTemplate local:Finder}"/>
        </Tab>
        <Tab Title="Tag Editor" Icon="tagedit.png">
            <ShellContent ContentTemplate="{DataTemplate local:TagEditor}"/>
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent ContentTemplate="{DataTemplate local:Settings}"/>
        </Tab>
    </TabBar>

</Shell>
